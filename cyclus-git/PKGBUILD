# Maintainer: Robert Carlsen <rwcarlsen@gmail.com>
pkgname=cyclus-git
_gitname=cyclus
pkgver=0.0.0
pkgrel=1
pkgdesc="The Cyclus fuel cycle simulator"
arch=('any')
url="http://cyclus.github.io"
license=('BSD')
groups=('CNERG')
depends=('libxml++' 'sqlite>=3.7.10' 'boost>=1.5.0' 'blas' 'coin-cbc' 'lapack')
makedepends=('cmake>=2.8' 'git')
provides=('cyclus')
conflicts=('cyclus')
source=(git://github.com/cyclus/cyclus.git)
md5sums=('SKIP')

build() {
  cd $_gitname
  rm -Rf build
  mkdir build; cd build;
  cmake ../src -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $_gitname/build
  make DESTDIR="$pkgdir/" install
}

