# Maintainer: Robert Carlsen <rwcarlsen@gmail.com>
pkgname=cyclus
pkgver=0.2
pkgrel=1
pkgdesc="The Cyclus fuel cycle simulator"
arch=('any')
url="http://cyclus.github.io"
license=('BSD')
groups=('CNERG')
source=(https://github.com/cyclus/cyclus/archive/$pkgver.tar.gz)
md5sums=('1f2e5564bf7ce9391bcef5ac405f63e9')
makedepends=('cmake>=2.8')
depends=('libxml++' 'sqlite>=3.7.10' 'boost' 'cyclopts>=0.2')
conflicts=('gtest')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  rm -Rf build
  mkdir build; cd build;
  cmake ../src -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"
  make DESTDIR="$pkgdir/" install
}

