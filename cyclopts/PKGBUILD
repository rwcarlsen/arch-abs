# Maintainer: Robert Carlsen <rwcarlsen@gmail.com>
pkgname=cyclopts
pkgver=0.2
pkgrel=1
pkgdesc="Cyclus optimization library"
arch=('any')
url="http://github.com/cyclus/cyclopts"
license=('BSD')
groups=('CNERG')
source=(https://github.com/cyclus/cyclopts/archive/$pkgver.tar.gz)
md5sums=('aa0e09e0746a299818a61b48be62ec51')
depends=('cmake>=2.8' 'boost' 'coin-cbc' 'blas' 'lapack')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  rm -Rf build
  mkdir build; cd build;
  cmake ../src -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"
  make DESTDIR="$pkgdir/" install
}
