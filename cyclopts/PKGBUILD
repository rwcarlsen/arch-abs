pkgname=cyclopts
pkgver=master
pkgrel=1
pkgdesc=""
arch=('any')
url="http://github.com/cyclus/cyclopts"
license=('BSD')
groups=('CNERG')
source=(https://github.com/cyclus/cyclopts/archive/$pkgver.tar.gz)
sha256sums=('9a00467ade286b724e4809c58c40a62a28f2503197250bfb7ff3d1681189f5a6')
depends=('cmake>=2.8' 'boost' 'coin-cbc' 'blas' 'lapack')

build() {
  cd "$srcdir/cyclopts-$pkgver"
  rm -Rf build
  mkdir build; cd build;
  cmake ../src -DCMAKE_INSTALL_PREFIX=/usr
  make
}

#check() {
#}

package() {
  cd "$srcdir/cyclopts-$pkgver/build"
  make DESTDIR="$pkgdir/" install
}
