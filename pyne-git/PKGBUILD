# Maintainer: Robert Carlsen <rwcarlsen@gmail.com>
pkgname=pyne-git
_gitname=pyne
pkgver=0.0.0
pkgrel=1
pkgdesc="PyNE: The Nuclear Engineering Toolkit"
arch=('any')
url="http://pynesim.org"
license=('BSD')
depends=('python2' 'python2-numpy' 'python2-scipy' 'cython2' 'hdf5' 'python2-pytables' 'python2-sphinx')
makedepends=('git')
provides=('pyne')
conflicts=('pyne')
source=(git://github.com/pyne/pyne)
md5sums=('SKIP')

build() {
  cd $_gitname
  sed -i 's/NAMES cython cython.bat/NAMES cython2/' cmake/FindCython.cmake
  python2 setup.py build
}

package() {
  cd $_gitname
  python2 setup.py install --prefix=$pkgdir/usr
  #./nuc_data_make
}

