# Maintainer: Robert Carlsen <rwcarlsen@gmail.com>
pkgname=cyclopts-git
_gitname=cyclopts
pkgver=0.0.0
pkgrel=1
pkgdesc="The Cyclus fuel cycle simulator basic module pack."
arch=('any')
url="http://cyclus.github.io"
license=('BSD')
groups=('CNERG')
depends=('boost' 'coin-cbc' 'blas' 'lapack')
makedepends=('cmake>=2.8' 'git')
provides=('cyclopts')
conflicts=('cyclopts')
source=(git://github.com/cyclus/cyclopts)
md5sums=('SKIP')

build() {
  cd $_gitname
  rm -Rf build
  mkdir build; cd build;
  cmake ../src -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd $_gitname/build
  make DESTDIR="$pkgdir/" install
}

